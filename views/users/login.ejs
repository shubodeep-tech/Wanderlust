<% layout("layouts/boilerplate") %>

<div class="row mt-5">
  <h1 class="col-6 offset-3 text-center">Login</h1>

  <div class="col-6 offset-3 mt-3">
    <form action="/login" method="POST" clas="needs-validation">

      <!-- Username -->
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      
      </div>

      <!-- Password -->
      <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
             name="password"
             id="password"
             type="password"
             class="form-control"
             required
            />
          <div class="invalid-feedback">Password is required</div>
        </div>
      <!-- Submit -->
      <button class="btn btn-danger w-100">Sign Up</button>

    </form>
  </div>
</div>